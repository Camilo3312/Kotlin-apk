<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ResultStudentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="-25dp"
        android:layout_height="450dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/card_result_student"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shadow_gray"
            android:orientation="vertical"
            android:backgroundTint="@color/red"
            android:paddingTop="50dp"
            android:paddingLeft="40dp"
            android:paddingBottom="40dp"
            android:paddingRight="40dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_white"/>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cristian Camilo"
                android:textSize="35dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/state_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Usted gano"
                android:textColor="@color/white"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su promedio fue de 3.4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/alata"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recuperation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:text="Usted no puede recuperar"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materias"
            android:fontFamily="@font/alata"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matematicas 4 \nEspaÃ±ol 5"
            android:textAlignment="center"
            android:fontFamily="@font/alata"
            android:textSize="40dp" />

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>